<table>
    <thead>
            <h4>Your Profile</h4>
    </thead>
<tbody>
    <tr>
        <td>Email : {{ app.user.email }}</td>
        <td>Password : ******</td>
    </tr>

    <tr>
        {% if not app.user.organization %}
        <td>

                {% if app.user.firstname is empty %}
                    Firstname : Add a firstname
                    {% else %}
                        Firstname : {{ app.user.firstname }}
                {% endif %}
        </td>
        <td>
                {% if app.user.lastname is empty %}
                    Lastname : Add a lastname
                    {% else %}
                       Lastname : {{ app.user.lastname }}
            {%  endif %}

        </td>
        {% else %}
        <td>
                {% if app.user.organization.name is empty %}
                    Organization : Add an organization
                    {% else %}
                        Organization : {{ app.user.organization.name }}
                {% endif %}

        </td>
        {% endif %}
    </tr>

    <tr>
        <td>
            Biography : {{ (app.user.biography != null ? app.user.biography : 'Complete your biography') }}
        </td>
    </tr>
    <tr>
        <td>
            Country : {{ (app.user.country != null ? app.user.country.name : 'Add a country') }}
        </td>
    </tr>
    <tr>
        <td>
            Languages :

            {% for language in user.languages %}
                <ul>
                    <li>
                        {{ language.name }}
                    </li>
                </ul>
            {% else %}
                Add a language
            {% endfor %}

        </td>
    </tr>
    <tr>
        <td>
            <a href="{{ path('dashboard_edit', {'id': user.id} ) }}"><button class="btn btn-primary">Edit my profil</button></a>
        </td>
        <td>
            <form method="post" action="{{ path('dashboard_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure ? Your account will be delete forever');">
                <button class="danger">Delete my account</button>
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
            </form>
        </td>
    </tr>
</tbody>
</table>
