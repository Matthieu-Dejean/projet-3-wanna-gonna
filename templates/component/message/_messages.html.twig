{% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <div class="row justify-content-sm-center">
        <div class="home-section d-flex flex-column bg-light rounded p-4 shadow w-100 mx-4">
            <div>
                <h1>Inbox</h1>
                <p><a href="{{ path('messages_new', {'id': project.id}) }}">Write a new message</a></p>
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active" id="cards-tab" data-toggle="tab" href="#received" role="tab"
                           aria-controls="cards" aria-selected="true">Received messages</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" id="table-tab" data-toggle="tab" href="#sent" role="tab" aria-controls="table"
                           aria-selected="false">Sent messages</a>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active justify-content-center" id="received" role="tabpanel" aria-labelledby="cards-tab">
                        {% include 'component/project/message/_messages_received.html.twig' %}
                    </div>
                    <div class="tab-pane fade" id="sent" role="tabpanel" aria-labelledby="table-tab">
                        {% include 'component/project/message/_messages_sent.html.twig' %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% else %}
        <div class="row justify-content-sm-center">
            <div class="home-section d-flex flex-column bg-light rounded p-4 shadow w-100 mx-4">
                <div>
                     <p>You are not connected, you must be connected to send a message</p>
                </div>
            </div>
        </div>
{% endif %}