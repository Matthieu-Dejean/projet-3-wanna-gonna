<div class="notification-button text-center">
    <button class="btn btn-blueish dropdown-toggle position-relative" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class="fas fa-bell"></i>
        {% if (unreadNotificationsCount != 0) %}
            <div class="badge badge-pill badge-primary position-absolute px-2 py-1 notification-badge">{{ unreadNotificationsCount }}</div>
        {% endif %}
    </button>
    <div class="dropdown-menu dropdown-menu-right py-0 mr-1" aria-labelledby="dropdownMenuButton">
        {% for notification in notifications %}
            <a class="dropdown-item alert alert-{{ (notification.isRead) ? 'light' : 'blueish' }} my-0 border-left-{{ (notification.isRead) ? 'light' : 'blueish' }}" href="#">
                <i class="fas fa-bookmark mr-2"></i>{{ notification.content }}
            </a>
        {% endfor %}
    </div>
</div>
